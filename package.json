{
  "name": "find-me",
  "version": "1.0.0",
  "description": "find me project",
  "main": "index.js",
  "author": "Guilherme Afonso Borchardt",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "build": "turbo run build",
    "lint": "eslint . --max-warnings 0",
    "server:build": "turbo run build --scope=*auth*",
    "auth": "yarn workspace @find-me/auth run build && yarn workspace @find-me/auth run serve",
    "auth2": "yarn workspace @find-me/auth start"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "backend/*",
      "frontend/*",
      "standard/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/preset-env": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/experimental-utils": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "tslib": "^2.4.1",
    "turbo": "^1.6.3"
  }
}
