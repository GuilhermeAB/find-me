{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    // "paths": {
    //   "src/*": ["src/*"]
    // },
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // "typeRoots": [
    //   "@types"
    // ]
  }
